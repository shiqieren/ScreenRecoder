<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item 的top left right bottom 相当于margin 设置不需要的边为负值 -->
    <item>
        <shape>
            <!-- 背景颜色 -->
            <solid android:color="#ffffff" />
            <!-- 边框颜色 -->
            <stroke
                android:width="1dp"
                android:color="#acacac" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</layer-list>